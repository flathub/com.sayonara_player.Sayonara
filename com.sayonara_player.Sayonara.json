{
    "app-id": "com.sayonara_player.Sayonara",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "add-extensions": {
      "org.freedesktop.Platform.ffmpeg-full": {
        "directory": "lib/ffmpeg",
        "version": "24.08",
        "add-ld-path": "."
      }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],  
    "command": "sayonara",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.mpris.MediaPlayer2.Player",
        "--own-name=org.mpris.MediaPlayer2.sayonara",
        "--talk-name=org.kde.StatusNotifierWatcher",    
        "--device=all"
    ],
    "rename-appdata-file": "com.sayonara-player.Sayonara.appdata.xml",
    "rename-desktop-file": "com.sayonara-player.Sayonara.desktop",
    "rename-icon": "sayonara",
    "modules": [
        {
            "buildsystem": "autotools",
            "name": "soundtouch",
            "sources": [
                {
                    "commit": "e83424d5928ab8513d2d082779c275765dee31b9",
                    "tag": "2.3.3",
                    "type": "git",
                    "url": "https://codeberg.org/soundtouch/soundtouch.git"
                }
            ]
        },
        {
            "config-opts": [
                "--buildtype=release",
                "-Ddoc=disabled",
                "-Dexamples=disabled",
                "-Dtests=disabled",
                "-Dnls=disabled",
                "-Dgobject-cast-checks=disabled",
                "-Dglib-asserts=disabled",
                "-Dglib-checks=disabled",
                "-Dbase=enabled",
                "-Dgood=enabled",
                "-Dbad=enabled",
                "-Dugly=enabled",
                "-Dlibav=enabled"
            ],
            "buildsystem": "meson",
            "name": "gstreamer",
            "sources": [
                {
                    "commit": "c396e7da4c1f1c9a3666d62bd47af023fc984e37",
                    "tag": "1.24.8",
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
                }
            ]
        },
        {
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-1.11.1.tar.gz",
                    "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
                }
            ]
        },
        {
            "name": "sayonara",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "commit": "b39e7fabed88ddbfd3ce8e72d942f8b54a6f356d",
                    "type": "git",
                    "url": "https://gitlab.com/luciocarreras/sayonara-player.git",
                    "tag": "1.11.0-stable1"
                },
                {
                    "type": "patch",
                    "path": "appdataxml-description.patch"
                }
            ]
        }
    ]
}
