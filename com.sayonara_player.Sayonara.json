{
    "app-id": "com.sayonara_player.Sayonara",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-25.08",
    "sdk": "org.kde.Sdk",
    "add-extensions": {
      "org.freedesktop.Platform.ffmpeg-full": {
        "directory": "lib/ffmpeg",
        "version": "24.08",
        "add-ld-path": "."
      }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],  
    "command": "sayonara",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.mpris.MediaPlayer2.Player",
        "--own-name=org.mpris.MediaPlayer2.sayonara",
        "--talk-name=org.kde.StatusNotifierWatcher",    
        "--device=all",
        "--env=GST_PLUGIN_PATH=/app/lib/ffmpeg/lib/gstreamer-1.0"
    ],
    "rename-appdata-file": "com.sayonara-player.Sayonara.appdata.xml",
    "rename-desktop-file": "com.sayonara-player.Sayonara.desktop",
    "rename-icon": "sayonara",
    "modules": [
        {
            "buildsystem": "autotools",
            "name": "soundtouch",
            "sources": [
                {
                    "commit": "e83424d5928ab8513d2d082779c275765dee31b9",
                    "tag": "2.3.3",
                    "type": "git",
                    "url": "https://codeberg.org/soundtouch/soundtouch.git"
                }
            ]
        },
        {
            "config-opts": [
                "-Dbase=enabled",
                "-Dgood=enabled",
                "-Dugly=enabled",
                "-Dbad=enabled",
                "-Dlibav=enabled",
                "-Dgst-libav:ffmpeg=disabled", 
                "-Dtools=disabled",
                "-Dtests=disabled"
            ],
            "buildsystem": "meson",
            "name": "gstreamer",
            "sources": [
                {
                    "commit": "f313fae193089408e278c0dd3450145e5a12307b",
                    "tag": "1.26.9",
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
                }
            ]
        },
        {
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.org/releases/taglib-2.1.1.tar.gz",
                    "sha256": "3716d31f7c83cbf17b67c8cf44dd82b2a2f17e6780472287a16823e70305ddba"
                }
            ]
        },
        {
            "name": "sayonara",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "commit": "b39e7fabed88ddbfd3ce8e72d942f8b54a6f356d",
                    "type": "git",
                    "url": "https://gitlab.com/luciocarreras/sayonara-player.git",
                    "tag": "1.11.0-stable1"
                },
                {
                    "type": "patch",
                    "path": "appdataxml-description.patch"
                }
            ]
        }
    ]
}
