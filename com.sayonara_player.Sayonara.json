{
    "app-id": "com.sayonara_player.Sayonara",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "add-extensions": {
      "org.freedesktop.Platform.ffmpeg-full": {
        "directory": "lib/ffmpeg",
        "version": "21.08",
        "add-ld-path": "."
      }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],
    "command": "sayonara",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.mpris.MediaPlayer2.Player",
        "--own-name=org.mpris.MediaPlayer2.sayonara",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--device=all"
    ],
    "rename-appdata-file": "sayonara.appdata.xml",
    "rename-desktop-file": "com.sayonara-player.Sayonara.desktop",
    "rename-icon": "sayonara",
    "modules": [
        {
            "buildsystem": "autotools",
            "name": "soundtouch",
            "sources": [
                {
                    "commit": "762f56024b7ade81f6565903161dffec0ad4741e",
                    "tag": "2.2",
                    "type": "git",
                    "url": "https://codeberg.org/soundtouch/soundtouch.git"
                }
            ]
        },
        {
            "config-opts": [
                "--buildtype=release",
                "-Ddoc=disabled",
                "-Dexamples=disabled",
                "-Dtests=disabled",
                "-Dnls=disabled",
                "-Dgobject-cast-checks=disabled",
                "-Dglib-asserts=disabled",
                "-Dglib-checks=disabled",
                "-Dbase=enabled",
                "-Dgood=enabled",
                "-Dbad=enabled",
                "-Dugly=enabled",
                "-Dlibav=enabled"
            ],
            "buildsystem": "meson",
            "name": "gstreamer",
            "sources": [
                {
                    "commit": "8dbfc89a850d484a27937eb882978251bfce06b3",
                    "tag": "1.20.2",
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
                }
            ]
        },
        {
            "config-opts": [
                "-DBUILD_SHARED_LIBS=ON"
            ],
            "name": "taglib",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://taglib.github.io/releases/taglib-1.11.1.tar.gz",
                    "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
                }
            ]
        },
        {
            "name": "sayonara",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "commit": "18e63ab31da929ebfa4d7f21791039997a567b49",
                    "type": "git",
                    "url": "https://gitlab.com/luciocarreras/sayonara-player.git",
                    "tag": "1.7.0-stable3"
                },
                {
                    "type": "patch",
                    "path": "appid-naming-convention.patch"
                }
            ]
        }
    ]
}
