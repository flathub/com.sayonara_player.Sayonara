{
    "app-id": "com.sayonara_player.Sayonara",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-24.08",
    "sdk": "org.kde.Sdk",
    "add-extensions": {
      "org.freedesktop.Platform.ffmpeg-full": {
        "directory": "lib/ffmpeg",
        "version": "24.08",
        "add-ld-path": "."
      }
    },
    "cleanup-commands": [
        "mkdir -p /app/lib/ffmpeg"
    ],  
    "command": "sayonara",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--filesystem=host",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.mpris.MediaPlayer2.Player",
        "--own-name=org.mpris.MediaPlayer2.sayonara",
        "--talk-name=org.kde.StatusNotifierWatcher",    
        "--device=all"
    ],
    "rename-appdata-file": "com.sayonara-player.Sayonara.appdata.xml",
    "rename-desktop-file": "com.sayonara-player.Sayonara.desktop",
    "rename-icon": "sayonara",
    "modules": [
        {
            "name": "soundtouch",
            "sources": [
                {
                    "commit": "d994965fbbcf0f6ceeed0e72516968130c2912f0",
                    "tag": "2.4.0",
                    "type": "git",
                    "url": "https://codeberg.org/soundtouch/soundtouch.git",
                    "x-checker-data": {
			    "type": "git",
			    "tag-pattern": "^([\\d.]+)$"
			}
                }
            ]
        },
        {
            "name": "sayonara",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "commit": "b39e7fabed88ddbfd3ce8e72d942f8b54a6f356d",
                    "type": "git",
                    "url": "https://gitlab.com/luciocarreras/sayonara-player.git",
                    "tag": "1.11.0-stable2",
                    "x-checker-data": {
			    "type": "git",
			    "tag-pattern": "^([\\d.]+)-stable[\\d]+$"
			}
                }   
            ]
        }
    ]
}
